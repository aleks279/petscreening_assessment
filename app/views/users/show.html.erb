<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <h1>Pets</h1>

  <div id="pets">
    <% @user.pets.each do |pet| %>
      <%= render pet %>
      <p>
        <%= link_to "Show this pet", pet %>
      </p>
    <% end %>
  </div>
</div>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
